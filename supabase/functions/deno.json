{
	"compilerOptions": {
		"allowJs": true,
		"strict": true,
		"lib": [
			"deno.window"
		],
		"noImplicitAny": true
	},
	"lint": {
		"files": {
			"include": [
				"**/*.ts"
			]
		},
		"rules": {
			"tags": [
				"recommended"
			]
		}
	},
	"fmt": {
		"files": {
			"include": [
				"**/*.ts"
			]
		},
		"options": {
			"indentWidth": 2,
			"lineWidth": 80,
			"singleQuote": true
		}
	}
}